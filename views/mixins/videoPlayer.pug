mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)       
        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumnBtn
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00 
                    span    / 
                    span#totalTime 00:00:00
                input.videoPlayer__volume#jsVolumn(type="range", min="0", max="1", step="0.1", value="0.5")
            .videoPlayer__column
                span#jsPlayButton
                    i.fa.fa-play
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand
